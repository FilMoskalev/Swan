@model System.Collections.Generic.Dictionary<string,System.Collections.Generic.Dictionary<string,string>>


    <div id="sidebar-left" class="col-xs-2 col-sm-2">
      <ul class="nav main-menu">
        <li>
          <a href="/Content/devoops-master/ajax/dashboard.html" class="ajax-link">
            <i class="fa fa-dashboard"></i>
            <span class="hidden-xs">Dashboard</span>
          </a>
        </li>

        @{
          string activeCandidates = "";
          string activeCandidatesStyle = "";
          
        }
        @if (ViewBag.SelectedCategory == "Candidates")
        {
          activeCandidates = "active-parent active";
          activeCandidatesStyle = "display: block;";
        }
      <li class="dropdown">
        <a href="#" class="dropdown-toggle @activeCandidates">
          <i class="fa fa-users"></i>
          <span class="hidden-xs">Candidates</span>
        </a>
          <ul class="dropdown-menu" style="@activeCandidatesStyle">
            <li><a class="" href="/Candidates/Create/">Create New</a></li>
            <li><a class="" href="/Candidates/">Show All</a></li>
          </ul>
        </li>

        @{
          string activeVacancies = "";
          string activeVacanciesStyle = "";         
        }
        @if (ViewBag.SelectedCategory == "Vacancies")
        {
          activeVacancies = "active-parent active";
          activeVacanciesStyle = "display: block;";
        }
      <li class="dropdown">
        <a href="#" class="dropdown-toggle @activeVacancies">
          <i class="fa fa-list-ul "></i>
          <span class="hidden-xs">Vacancies</span>
        </a>
        <ul class="dropdown-menu" style="@activeVacanciesStyle">
          <li><a class="" href="/Vacancies/Create/">Create Vacancies</a></li>
          <li><a class="" href="/Vacancies/">Show all Vacancies</a></li>
        </ul>
      </li>


      @{
        string activeUsers = "";
        string activeUsersStyle = "";        
      }
        @if (ViewBag.SelectedCategory == "Account")
        {
          activeUsers = "active-parent active";
          activeUsersStyle = "display: block;";
        }
        <li class="dropdown">
          <a href="#" class="dropdown-toggle @activeUsers">
            <i class="fa fa-user "></i>
            <span class="hidden-xs">Users</span>
          </a>
          <ul class="dropdown-menu" style="@activeUsersStyle">
            <li><a class="" href="/Account/Register/">Register new</a></li>
            <li><a class="" href="/Account/ShowAllUsers/">Show all users</a></li>
          </ul>
        </li>
        
      </ul>
    </div>
