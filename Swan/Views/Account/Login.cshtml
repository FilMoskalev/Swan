@model Swan.Models.LogOnModel
@{
    ViewBag.Title = "Log In";
    Layout = null;
}
@Styles.Render("~/Content/devoops-master/plugins/bootstrap/bootstrap.css")
@Styles.Render("~/Content/devoops-master/css/font-awesome.min.css")
@Styles.Render("~/Content/devoops-master/css/style_v2.css")

<div class="container-fluid">
  <div id="page-login" class="row">
    <div class="col-xs-12 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3" style="margin-top: 15%;">

        @using (Html.BeginForm())
        {
          @Html.ValidationSummary(true, null, new {@class = "text-danger"})

          <div class="box-content">
            <div class="text-center">
              <h3 class="page-header">Login Page</h3>
            </div>
            <div class="form-group">
              @Html.LabelFor(model => model.UserName, new {@class = "control-label"})

              @Html.TextBox("UserName", @Model.UserName, new {@class = "form-control"})
              @Html.ValidationMessageFor(model => model.UserName)

            </div>

            <div class="form-group">
              @Html.LabelFor(model => model.Password, new {@class = "control-label"})

              @Html.TextBox("Password", @Model.Password, new {@class = "form-control", type = "password"})
              @Html.ValidationMessageFor(model => model.Password)

            </div>

            <div class="form-group">
              @Html.EditorFor(model => model.RememberMe)
              @Html.LabelFor(model => model.RememberMe, new {@class = "control-label"})
            </div>

            <div class="text-center">
              <input type="submit" value="Log in" class="btn btn-primary"/>
            </div>
          </div>
        }
      </div>
    </div>
  </div>


